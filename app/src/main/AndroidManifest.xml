<?xml version="1.0" encoding="utf-8"?>
<manifest
    package="net.opencurlybraces.android.projects.wifihandler"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE"/>
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ConfiguredWifiListActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:label="@string/app_name"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <service
            android:name=".service.WifiHandlerService"
            android:enabled="true"
            android:exported="false"
            android:label="@string/app_name">
        </service>

        <service
            android:name=".service.ContentIntentService"
            android:exported="false">
            <intent-filter>
                <action android:name="net.opencurlybraces.android.projects.wifihandler.service.ACTION_HANDLE_SAVED_WIFI_INSERT"/>
                <action android:name="net.opencurlybraces.android.projects.wifihandler.service.ACTION_HANDLE_SAVED_WIFI_UPDATE"/>
            </intent-filter>
        </service>

        <receiver android:name=".receiver.WifiStateReceiver">
            <intent-filter>
                <action android:name="android.net.wifi.supplicant.STATE_CHANGE"/>"
                <action android:name="android.net.wifi.WIFI_STATE_CHANGED"/>
            </intent-filter>
        </receiver>

        <!--<service-->
        <!--android:name=".service.ScanResultHandlerService"-->
        <!--android:enabled="true"-->
        <!--android:exported="false">-->
        <!--</service>-->

        <provider
            android:name=".data.provider.WifiHandlerProvider"
            android:authorities="net.opencurlybraces.android.projects.wifihandler.data.provider"
            android:exported="false">
        </provider>
    </application>

</manifest>
