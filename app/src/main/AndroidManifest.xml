<?xml version="1.0" encoding="utf-8"?>
<manifest
    package="net.opencurlybraces.android.projects.wifihandler"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"></uses-permission>
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE"></uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ConfiguredWifiListActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <receiver android:name=".receiver.WifiScanResultsReceiver">
            <intent-filter>
                <action android:name="android.net.wifi.SCAN_RESULTS"/>
            </intent-filter>
        </receiver>

        <service
            android:name=".service.WifiEventService"
            android:label="Wifi Handler Service">
            <intent-filter>
                <action
                    android:name="net.opencurlybraces.android.projects.wifihandler.service.ACTION_HANDLE_WIFI_SCAN_RESULTS"/>
            </intent-filter>
        </service>

        <provider
            android:name=".data.provider.WifiHandlerProvider"
            android:authorities="net.opencurlybraces.android.projects.wifihandler.data.provider"
            android:exported="false">
        </provider>
    </application>

</manifest>
