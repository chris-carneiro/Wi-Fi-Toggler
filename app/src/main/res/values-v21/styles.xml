<resources>

    <!-- Base application theme. -->
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">

        <!-- Changes statusBarColor when app visible-->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/material_blue_700</item>

        <!-- ActionBar color on recents screen-->
        <item name="colorPrimary">@color/material_blue_500</item>
        <!-- Status bar color  -->
        <item name="colorPrimaryDark">@color/material_blue_700</item>

    </style>

    <style name="Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/white</item>

    </style>


    <style name="AppTheme" parent="AppTheme.Base"/>
</resources>

