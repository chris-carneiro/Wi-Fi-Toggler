<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
       android:layout_width="match_parent"
       android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/saved_wifi_confirmation_banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:alpha="0.0"
        android:background="@color/background_floating_material_dark"
        android:padding="@dimen/medium_padding"
        >

        <TextView
            android:id="@+id/tv_confirmation_message_wifi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/undo_action_wifi_button"
            android:ellipsize="marquee"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@android:color/white"
            />

        <TextView
            android:id="@+id/undo_action_wifi_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="5sp"
            android:text="@string/wifi_undo_action_text"
            android:textColor="@color/material_blue_500"
            />
    </RelativeLayout>
</merge>