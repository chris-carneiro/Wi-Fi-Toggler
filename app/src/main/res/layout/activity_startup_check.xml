<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                tools:context="net.opencurlybraces.android.projects.wifihandler.ui.StartupCheckActivity">

    <RelativeLayout
        android:id="@+id/check_scan_always_available_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle_shape"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/check_scan_always_available_settings_title_tv"
            android:text="@string/check_scan_always_available_settings_title"
            android:textSize="@dimen/check_settings_title_text_size"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/check_scan_always_available_settings_title_tv"
            android:text="@string/check_scan_always_available_settings_desc"
            android:textSize="@dimen/check_settings_description_text_size"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/check_wifi_settings_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle_shape"
        android:layout_below="@id/check_scan_always_available_layout"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/check_wifi_settings_title_tv"
            android:text="@string/check_wifi_settings_title"
            android:textSize="@dimen/check_settings_title_text_size"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/check_wifi_settings_title_tv"
            android:text="@string/check_wifi_settings_desc"
            android:textSize="@dimen/check_settings_description_text_size"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/check_airplane_settings_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle_shape"
        android:layout_below="@id/check_wifi_settings_layout"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/check_airplane_settings_title_tv"
            android:text="@string/check_airplane_settings_title"
            android:textSize="@dimen/check_settings_title_text_size"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/check_airplane_settings_title_tv"
            android:text="@string/check_airplane_settings_desc"
            android:textSize="@dimen/check_settings_description_text_size"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/check_hotspot_settings_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle_shape"
        android:layout_below="@id/check_airplane_settings_layout"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/check_hotspot_settings_title_tv"
            android:text="@string/check_hotspot_settings_title"
            android:textSize="@dimen/check_settings_title_text_size"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/check_hotspot_settings_title_tv"
            android:text="@string/check_hotspot_settings_desc"
            android:textSize="@dimen/check_settings_description_text_size"/>

    </RelativeLayout>
</RelativeLayout>
